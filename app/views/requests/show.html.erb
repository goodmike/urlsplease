<% content_for :title do "Request by #{@request.user.nickname}" end %>

<h2>Request</h2>
<p>
  <b>Requirements:</b>
  <%= @request.requirements %>
</p>

<p>
  <b>Posted by:</b>
  <%= @request.user.nickname %>
</p>

<p><b>Tags:</b></p>

<p><%= @request.tags.collect(&:contents).join(', ') %></p>

<p><b>Resources posted in response:</b></p>

<ul>
<% @resources.each do |r| %>
<% unless r.new_record? %>
  <li><%= link_to r.url, r.url %> by <%= r.user.nickname %></li>
  <% end %>
<% end %>
</ul>

<p><b>Post a resource:</b></p>
<%= form_for @resource, :url => user_request_resources_path(current_user, @request) do |r| %>
  <%= r.text_area :url, :cols => 80, :rows => 3 %>
  <%= submit_tag 'Create' %>
<% end %>
<%= link_to 'Back', requests_path %>
