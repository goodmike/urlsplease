<% content_for :title do "Requests" end %>

<h2>Listing requests</h2>

<table>
  <tr>
    <th>Requirements</th>
    <th>Posted by</th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= link_to request.requirements, user_request_path(request.user, request) %></td>
    <td><%= request.user.nickname %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Request', new_user_request_path(current_user) %>
